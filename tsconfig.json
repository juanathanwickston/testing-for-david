{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    // ðŸ‘‡ add these two
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },

    // Next.js will also inject its plugin automatically; leaving it is fine:
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"   // Next adds this on first build; keep it
  ],
  "exclude": ["node_modules"]
}
